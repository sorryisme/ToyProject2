    <script>
        $(function(){

            const grid = new tui.Grid({
                el: document.getElementById('grid'),
                scrollX: false,
                scrollY: false,
                //data: gridData,
                columns: [
                    {
                        header: '날짜',
                        name: 'payDate',
                        editor:'datePicker'
                    },
                    {
                        header: '항목',
                        name: 'title',
                        editor: 'text'
                    },
                    {
                        header: '소비금액',
                        name: 'price',
                        editor: 'text'
                    },
                    {
                        header: '유형',
                        name: 'consumerType',
                        formatter: 'listItemText',
                        editor: {
                            type: 'select',
                            options: {
                                listItems: [
                                    { text: '소비', value: '1' },
                                    { text: '낭비', value: '2' },
                                    { text: '투자', value: '3' }
                                ]
                            }
                        }
                    }
                ]

            });


            $("#addRowsBtn").click(function(){
                const rowData = {payDate: "2020-09-04", title: "1", price: "0", consumerType: "1"};
                grid.appendRow(rowData, {
                    extendPrevRowSpan: true,
                    focus: true
                });
            });

            $("#add3RowsBtn").click(function(){
                const rowData = {payDate: "2020-09-04", title: "1", price: "0", consumerType: "1"};
                for (let i = 0; i < 3; i++){
                    grid.appendRow(rowData, {
                        extendPrevRowSpan: true,
                        focus: true
                    });
                }
            });

            $("#saveBtn").click(function(){
                let gridData = grid.getData();
                let dataCnt = grid.getRowCount();
                let sendData = [];

                for (let i = 0 ; i < dataCnt; i++){
                    let selectData = gridData[i];
                    let dataObj = {
                        "consumerType" : selectData["consumerType"],
                        "payDate"      : selectData["payDate"],
                        "price"        : selectData["price"],
                        "title"        : selectData["title"]
                    };

                    sendData.push(dataObj);
                }
                console.log(JSON.stringify(sendData));
                $.ajax({
                    url : "/api/v1/account/save" ,
                    data : JSON.stringify(sendData),
                    type : 'POST',
                    contentType : 'application/json',
                    dataType : 'json'
                }).done(function(result){
                    console.log(result);
                }).fail(function(xhr,status,error){
                    console.log(error);
                });



            });


        });



    </script>

